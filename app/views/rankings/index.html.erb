<div class="container container-intests-new">
  <div class="col-md-12 text-center">
    <div class="h2 text-default">
      <i class="fa fa-sort-numeric-asc"> Rankings</i>
    </div>
  </div>
  <div class="center-block">
    <div class="col-md-12">
      <div class="row">
        <div class="col"></div>
        <div class="col-md-3 text-center">
          <h3 class="text-default">Top 10</h3>
          <h3 class="text-default">Iniciados</h3>
          <h3 class="text-info"><%= link_to "Veja Todos", rankings_starteds_path, class: "btn btn-info" %></h3>
          <% @profiles.evaluation(evaluation_type: :started, limit: 10).order(xp: :desc).each_with_index do |profile, index| %>
            <%= render 'profiles/profile_card', type: "ranking", profile: profile, index: index %>
          <% end %>
          <h3 class="text-info"><%= link_to "Veja Todos", rankings_starteds_path, class: "btn btn-info" %></h3>
        </div>
        <div class="col-md-3 text-center">
          <h3 class="text-default">Top 10</h3>
          <h3 class="text-default">Aprendizes</h3>
          <h3 class="text-light"><%= link_to "Veja Todos", rankings_novices_path, class: "btn btn-info" %></h3>
          <% @profiles.evaluation(evaluation_type: :novice, limit: 10).order(xp: :desc).each_with_index do |profile, index| %>
            <%= render 'profiles/profile_card', type: "ranking", profile: profile, index: index %>
          <% end %>
          <h3 class="text-light"><%= link_to "Veja Todos", rankings_novices_path, class: "btn btn-info" %></h3>
        </div>
        <div class="col-md-3 text-center">
          <h3 class="text-default">Top 10</h3>
          <h3 class="text-default">Cavaleiros</h3>
          <h3 class="text-light"><%= link_to "Veja Todos", rankings_knights_path, class: "btn btn-info" %></h3>
          <% @profiles.evaluation(evaluation_type: :knight, limit: 10).order(xp: :desc).each_with_index do |profile, index| %>
            <%= render 'profiles/profile_card', type: "ranking", profile: profile, index: index %>
          <% end %>
          <h3 class="text-light"><%= link_to "Veja Todos", rankings_knights_path, class: "btn btn-info" %></h3>
        </div>
        <div class="col"></div>
      </div>
    </div>
  </div>
</div>
