<div class="bg-perfil">
</div>
<div class="container container-profile">
  <div class="center-block">
    <div class="col-md-12">
      <div class="row">
        <% @users.joins(:profile).order('profiles.score DESC').order('users.login DESC').each do |user| %>
          <div class="col-md-3">
            <div class="list-group-item list-group-item-action flex-column align-items-start">
              <div class="justify-content-between">
                <div class="progress">
                  <% if user.profile %>
                    <div class="progress-bar" role="progressbar" style="width: <%= progress_bar(user) %>%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"><%= number_to_percentage(progress_bar(user), precision: 0) %></div>
                  <% end %>
                </div>
                <% if user.avatar %>
                  <%= image_tag user.avatar, size: "150x150", class: "profile-image" %>
                <% end %>
                <h5 class="mb-1">@<%= user.login %></h5>
                <% if user.profile %>
                  <span class="score-value btn btn-primary"><%= user.profile.score.to_f %></span>
                <% else %>
                  <span class="score-value btn btn-primary">?</span>
                <% end %>
                <div class="row">
                  <div class="col-md-6">
                    <p class="mb-1"><%= link_to "AnÃ¡lise", user_path(user.login) %></p>
                  </div>
                  <div class="col-md-6">
                    <p class="mb-1"><%= link_to "Github", "https://github.com/#{user.login}", target: "_blank" %></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
