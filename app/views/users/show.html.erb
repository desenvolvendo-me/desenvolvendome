<div class="container">
  <div class="center-block">
    <h1>Perfil</h1>
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @user.avatar, size: "200x200" %>
        <p>Score:
          <span><button type="button" class="btn btn-<%= label_experience(@user.profile.score) %> btn-round"><%= @user.profile.score %></button></span>
        </p>
      </div>
      <div class="col-md-4">
        <h3>Conhecimentos</h3>
        <ul class="list-group">
          <% knowledge_greater_than_1(@user).each do |knowledge| %>
            <li class="list-group-item d-flex justify-content-between align-items-center"><%= knowledge.language.description %>
              <span class="label label-<%= label_experience(knowledge.experience) %>"><%= number_to_percentage knowledge.experience, precision: 1 %></span>
            </li>
          <% end %>
          <li class="list-group-item d-flex justify-content-between align-items-center"><%= "Outras" %>
            <span class="label label-<%= label_experience(knowledge_less_than_1(@user).sum(:experience)) %>"><%= number_to_percentage knowledge_less_than_1(@user).sum(:experience), precision: 1 %></span>
          </li>
        </ul>
      </div>
      <div class="col-md-4">
        <h3>Avaliações</h3>
        <ul class="list-group">
          <% @user.profile.evaluations.each do |evaluation| %>
            <li class="list-group-item d-flex justify-content-between align-items-center"><%= t("enum.evaluation_type.#{evaluation.evaluation_type}") %>
              <span class="label label-<%= label_level(evaluation.level) %>"><%= evaluation.level %></span>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <div class="profile-head">
          <p>Github: <span><%= link_to @user.login, "https://github.com/#{@user.login}", target: "_blank" %></span></p>
          <p>Nome: <span><%= @user.name %></span></p>
          <p>Cargo: <span><%= t("enum.office.#{@user.office}") %></span></p>
          <p>Bio: <span><%= @user.bio %></span></p>
        </div>
      </div>
    </div>
  </div>
</div>
