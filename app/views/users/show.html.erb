<div class="bg-perfil">
</div>
<div class="container container-profile">
  <div class="center-block">
    <div class="row">
      <div class="col-md-12">
        <div class="image-container">
          <%= image_tag @user.avatar, size: "150x150", class: "profile-image" %>
          <p class="score-container">
            <span class="score-title">Score</span>
            <% if @user.profile %>
              <span class="score-value btn btn-primary"><%= @user.profile.score %></span>
            <% else %>
              <span class="score-value btn btn-primary">?</span>
            <% end %>
          </p>
          <div class="progress">
            <div class="progress-bar" role="progressbar" style="width: <%= progress_bar(@user) %>%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"><%= number_to_percentage(progress_bar(@user), precision: 0) %></div>
          </div>
        </div>
        <div class="profile-info">

          <p class="name"><%= @user.name %></p>
          <p class="login">
            <a href="https://github.com/<%= @user.login %>" title="<%= @user.login %>" target="_new">@<%= @user.login %></a>
          </p>
          <p class="bio"><span><%= @user.bio %></span></p>
        </div>
      </div>
    </div>
    <% if @user.profile %>
      <div class="row">
        <%= react_component("VisitChat", {avaliacoes: result_evaluations(@user.profile)}) %>
      </div>
      <div class="row">
        <div class="col-md-4">
          <h3>Conhecimentos</h3>
          <ul class="list-group">
            <% knowledge_greater_than_1(@user).each do |knowledge| %>
              <li class="list-group-item d-flex justify-content-between align-items-center"><%= knowledge.language.description %>
                <span class="label label-<%= label_experience(knowledge.experience) %>"><%= number_to_percentage knowledge.experience, precision: 1 %></span>
              </li>
            <% end %>
            <li class="list-group-item d-flex justify-content-between align-items-center"><%= "Outras" %>
              <span class="label label-<%= label_experience(knowledge_less_than_1(@user).sum(:experience)) %>"><%= number_to_percentage knowledge_less_than_1(@user).sum(:experience), precision: 1 %></span>
            </li>
          </ul>
        </div>
        <div class="col-md-4">
          <h3>Avaliações</h3>
          <ul class="list-group">
            <% @user.profile.evaluations.each do |evaluation| %>
              <li class="list-group-item d-flex justify-content-between align-items-center"><%= t("enum.evaluation_type.#{evaluation.evaluation_type}") %>
                <span class="label label-<%= label_level(evaluation.level) %>"><%= evaluation.level %></span>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
</div>