<div class="center-block">
  <h1>Perfil</h1>
  <form method="post">
    <div class="row">
      <div class="col-md-4">
        <p>Score:
          <span><button type="button" class="btn btn-info btn-round"><%= @user.profile.score %></button></span>
        </p>
        <%= image_tag @user.avatar, size: "200x200" %>
      </div>
      <div class="col-md-6">
        <h3>Linguagens</h3>
        <ul class="list-group">
          <% @user.profile.knowledges.each do |knowledge| %>
            <li class="list-group-item d-flex justify-content-between align-items-center"><%= knowledge.language.description %>
              <span class="badge badge-primary badge-pill"><%= number_to_percentage knowledge.experience, precision: 1 %></span>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <div class="profile-head">
          <p>Nome: <span><%= @user.name %></span></p>
          <p>Github: <span><%= @user.login %></span></p>
          <p>Bio: <span><%= @user.bio %></span></p>
        </div>
      </div>
    </div>
  </form>
</div>