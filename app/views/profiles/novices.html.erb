<div class="bg-perfil">
</div>
<div class="container profile">
  <div class="center-block">
    <div class="col-md-12">
      <h3 class="text-light text-center text-uppercase">Aprendizes</h3>
      <div class="row justify-content-center">
        <%= paginate @profiles %>
      </div>
      <div class="row">
        <% @profiles.each_with_index do |profile, index| %>
          <div class="col-md-3 text-center">
            <div class="list-group-item list-group-item-action flex-column align-items-start">
              <div class="justify-content-between">
                <% if profile.user.avatar %>
                  <%= link_to user_path(profile.user.login) do %>
                    <%= image_tag profile.user.avatar, size: "150x150", class: "profile-image" %>
                  <% end %>
                <% end %>
                <h5 class="mb-1"><%= link_to "@#{profile.user.login}", "https://github.com/#{profile.user.login}", target: "_blank" %></h5>
                <%= link_to user_path(profile.user.login) do %>
                  <% if profile %>
                    <span class="btn btn-primary"><%= profile.score.to_i %> xp</span>
                  <% else %>
                    <span class="btn btn-primary">?</span>
                  <% end %>
                <% end %>
              </div>
            </div>
            <br>
          </div>
        <% end %>
      </div>
      <div class="row justify-content-center">
        <%= paginate @profiles %>
      </div>
    </div>
  </div>
</div>
