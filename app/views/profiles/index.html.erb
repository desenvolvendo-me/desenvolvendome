<div class="container profile">
  <div class="center-block">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-4 text-center">
          <h3 class="text-default text-uppercase text-uppercase">top 10 iniciados</h3>
          <h3 class="text-info text-uppercase text-uppercase"><%= link_to "Veja Todos", starteds_path, class: "btn btn-info" %></h3>
          <% Profile.evaluation(evaluation_type: :started, limit: 10).each_with_index do |profile, index| %>
            <%= link_to user_path(profile.user.login) do %>
              <div class="list-group-item list-group-item-action flex-column align-items-start">
                <button type="button" class="btn btn-success">
                  <span class="badge"><h3><%= index + 1 %>ยบ</h3></span>
                </button>
                <div class="justify-content-between">
                  <% if profile.user.avatar %>
                    <%= image_tag profile.user.avatar, size: "150x150", class: "profile-image rounded-circle" %>
                  <% end %>
                  <h5 class="mb-1"><%= "@#{profile.user.login}" %></h5>
                  <% if profile %>
                    <span class="btn btn-info">XP <%= profile.score %></span>
                  <% else %>
                    <span class="btn btn-info">?</span>
                  <% end %>
                </div>
              </div>
            <% end %>
            <br>
          <% end %>
          <h3 class="text-info text-uppercase text-uppercase"><%= link_to "Veja Todos", starteds_path, class: "btn btn-info" %></h3>
