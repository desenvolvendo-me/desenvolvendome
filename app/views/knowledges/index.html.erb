<div class="container container-intests-new" xmlns="http://www.w3.org/1999/html">
  <div class="col-md-12 text-center">
    <div class="h2 text-default text-uppercase">
      <i class="fa fa-laptop"> seus conhecimentos</i>
    </div>
  </div>
  <div class="center-block">
    <div class="col-md-12 mx-auto">
      <div class="card card-signin">
        <div class="col-md-12 mx-auto">
          <%= search_form_for @q, class: "simple_form form-inline" do |f| %>
            <div class="row">
              <%= f.select :language_description_eq, options_from_collection_for_select(Language.joins(knowledges: [profile: :user]).where("users.id = ?", current_user.id), "description", "description", @q.language_description_eq), {:include_blank => true}, class: "form-control mb-1 mr-1" %>
              <%= f.submit "Pesquisar", class: "form-control mb-1 mr-1 btn btn-success" %>
              <%= link_to "Cancelar", request.path, class: "form-control mb-1 mr-1 btn btn-info" %>
            </div>
          <% end %>
        </div>
      </div>
      <hr class="featurette-divider">
      <div class="row justify-content-center">
        <%= paginate @knowledges %>
      </div>
      <div class="row justify-content-center">
        <%= page_entries_info @knowledges %>
      </div>
      <div class="row">
        <% @knowledges.order(level: :desc).each do |knowledge| %>
          <div class="col-md-6 text-center">
            <%#= link_to knowledge_path(knowledge.name) do %>
            <div class="list-group-item list-group-item-action flex-column align-items-start">
              <div class="d-flex w-100 justify-content-between">
                <small>
                  <div class="text-primary h3">
                    <% if asset_exists? "language/#{knowledge_type(knowledge.language.description)}/#{knowledge.language.description.to_s.downcase}.png" %>
                      <%= image_tag "language/#{knowledge_type(knowledge.language.description)}/#{knowledge.language.description.to_s.downcase}.png", size: "30x30" %>
                      <%= knowledge.language.description.to_s %>
                    <% else %>
                      <%= image_tag "language/empty.png", size: "30x30" %>
                      <%= knowledge.language.description.to_s %>
                    <% end %>
                  </div>
                </small>
                <small>
                  <i class="fa fa-trophy"></i> Seu nível é <strong><%= knowledge.level.to_i %></strong>
                </small>
              </div>
              <div class="d-flex w-100 justify-content-between">
                <small>
                  <%= people_same_knowledge(knowledge) %>
                </small>
              </div>
              <div class="d-flex w-100 justify-content-between">
                <small>
                  <%= people_higher_level(knowledge) %>
                </small>
              </div>
            </div>
            <%# end %>
            <br>
          </div>
        <% end %>
      </div>
      <div class="row justify-content-center">
        <%= paginate @knowledges %>
      </div>
    </div>
  </div>
</div>