<div class="container container-intests-new">
  <div class="center-block">
    <div class="col-md-9 mx-auto">
      <div class="card card-signin">
        <% if flash[:notice] %>
          <div class="alert alert-danger" role="alert">
            <%= flash[:notice].html_safe %>
          </div>
        <% end %>
        <div class="col-md-12">
          <%= simple_form_for @compare, html: {class: 'simple_form form-inline'} do |f| %>
            <div class="col-md-6">
              <div class="form-group">
                <input type="text" id="compare_login_1" name="compare[login_1]" placeholder="Login Github" class="form-control"/>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <input type="text" id="compare_login_2" name="compare[login_2]" placeholder="Login Github" class="form-control"/>
              </div>
            </div>
            <div class="col-md-12">
              <hr class="featurette-divider">

              <%= f.button :submit, "COMPARAR", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>