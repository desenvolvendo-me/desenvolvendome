<% if user.try(:profile) %>
  <% if progress_bar(user) == 100 %>
    <div class="row">
      <div class="col-md-12">
        <div class="text-center">
          <div class="row">
            <div class="col-md-12">
              <div class="list-group">
                <% user.profile.knowledges.where(knowledge_type: type.to_sym).ordered_by_language.each do |knowledge| %>
                  <%= render 'users/language', knowledge: knowledge, knowledge_type: type, user: user %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>


