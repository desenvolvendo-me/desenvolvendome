<div class="center-block">
  <h1>Perfil</h1>
  <form method="post">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @perfil.avatar, size: "200x200" %>
      </div>
      <div class="col-md-6">
        <h3>Linguagens</h3>
        <ul class="list-group">
          <% @perfil.conhecimentos.each do |conhecimento| %>
            <li class="list-group-item d-flex justify-content-between align-items-center"><%= conhecimento.tecnologia.descricao %>
              <span class="badge badge-primary badge-pill"><%= number_to_percentage conhecimento.experiencia, precision: 1 %></span>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <div class="profile-head">
          <p>Nome: <span><%= @perfil.nome %></span></p>
          <p>Github: <span><%= @perfil.github %></span></p>
          <p>Bio: <span><%= @perfil.descricao %></span></p>
        </div>
      </div>
    </div>
  </form>
</div>